<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp" app:cardCornerRadius="15dp" app:cardElevation="8dp">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:background="@color/mainBlue"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:clickable="true" app:srcCompat="@drawable/ic_abstract_scene" android:id="@+id/bt_control2"
                    android:contentDescription="@string/settings" android:focusable="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    tools:ignore="TouchTargetSizeCheck" android:layout_marginEnd="52dp"
                    android:layout_marginBottom="12dp" android:rotation="130"
                    android:tint="#E14242"/>
            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:clickable="true" app:srcCompat="@drawable/ic_abstract_scene" android:id="@+id/bt_control3"
                    android:contentDescription="@string/settings" android:focusable="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:ignore="TouchTargetSizeCheck" android:layout_marginEnd="76dp"
                    android:rotation="130"
                    android:tint="#E14242" app:layout_constraintBottom_toBottomOf="parent"/>
            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:clickable="true" app:srcCompat="@drawable/ic_abstract_scene" android:id="@+id/bt_control"
                    android:contentDescription="@string/settings" android:focusable="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    tools:ignore="TouchTargetSizeCheck" android:layout_marginEnd="36dp"
                    android:layout_marginBottom="16dp" android:rotation="130"
                    android:tint="#E14242"/>
            <TextView
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/tv_num_of_groups"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="76dp"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.911"
                    android:textColor="@color/mainWhite" app:layout_constraintStart_toEndOf="@+id/tv_groups"
                    android:layout_marginStart="12dp"/>
            <TextView
                    android:text="@string/groups"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_groups"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/tv_num_of_lamps"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.9" android:layout_marginEnd="12dp"
                    android:textColor="@color/mainWhite"/>
            <TextView
                    android:text="Fancy Scene â„–1"
                    android:layout_width="0dp"
                    android:layout_height="67dp"
                    android:id="@+id/tv_sceneName"
                    android:textSize="26sp"
                    android:textColor="@color/mainWhite"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"
                    android:paddingLeft="30dp" android:paddingTop="20dp" android:fontFamily="@font/inter_bold"
                    app:layout_constraintEnd_toEndOf="parent" android:paddingRight="20dp"/>
            <TextView
                    android:text="@string/lamps"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_lamps"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/tv_num_of_lamps"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.766" android:layout_marginEnd="12dp"
                    android:textColor="@color/mainWhite"/>
            <TextView
                    android:text="@string/num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/tv_num_of_lamps"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="76dp"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.766"
                    android:textColor="@color/mainWhite"/>
            <TextView
                    android:text="Description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView6"
                    android:fontFamily="@font/inter" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_sceneName" android:layout_marginStart="30dp"
                    android:textColor="#9C9C9C"/>
            <Button
                    android:layout_width="24dp"
                    android:layout_height="24dp" android:id="@+id/button"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                    android:background="@drawable/ic_baseline_timer_24" android:layout_marginStart="30dp"
                    android:layout_marginBottom="45dp"/>
            <Button
                    android:layout_width="24dp"
                    android:layout_height="24dp" android:id="@+id/button2"
                    android:background="@drawable/ic_baseline_display_settings_24"
                    app:layout_constraintTop_toBottomOf="@+id/button" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="30dp" app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="20dp" android:layout_marginTop="5dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>