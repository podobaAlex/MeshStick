<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/cl_components"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.meshstick_withoutmesh.SceneComponentsActivity" android:orientation="vertical"
>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rl_components"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layout_editor_absoluteY="0dp" tools:layout_editor_absoluteX="0dp"
                android:background="@color/mainWhite"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/bt_addLamp"
                android:background="@drawable/ic_addlamp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginRight="25dp" android:layout_marginEnd="25dp"
                tools:ignore="SpeakableTextPresentCheck" android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="119dp"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/bt_addGroup"
                android:background="@drawable/ic_addgroup"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginRight="25dp" android:layout_marginEnd="25dp"
                app:layout_constraintBottom_toTopOf="@+id/bt_addLamp" android:layout_marginBottom="20dp"
                tools:ignore="SpeakableTextPresentCheck" android:visibility="invisible"/>
        <ImageView
                android:layout_width="54dp"
                android:layout_height="54dp" app:srcCompat="@drawable/avd_anim"
                android:id="@+id/bt_add"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="45dp" android:background="@drawable/rounded_button"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="25dp"
                android:adjustViewBounds="false" android:cropToPadding="false"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>