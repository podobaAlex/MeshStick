<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/cl_components"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.meshstick_withoutmesh.SceneComponentsActivity">

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rl_components"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            tools:context="com.example.meshstick_withoutmesh.SceneComponentsActivity"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"
    />
    <Button
            android:text="@string/add_group"
            android:layout_width="wrap_content"
            android:layout_height="50dp" android:id="@+id/bt_addGroup"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="24dp" android:layout_marginStart="24dp" android:layout_marginBottom="36dp"
            app:layout_constraintTop_toBottomOf="@+id/rl_components" app:layout_constraintVertical_bias="1.0"/>
    <Button
            android:text="@string/add_lamp"
            android:layout_width="wrap_content"
            android:layout_height="50dp" android:id="@+id/bt_addLamp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="36dp"
            app:layout_constraintTop_toBottomOf="@+id/rl_components" app:layout_constraintVertical_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/bt_addGroup" app:layout_constraintHorizontal_bias="0.947"/>

</androidx.constraintlayout.widget.ConstraintLayout>