<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/cl_components"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.meshstick_withoutmesh.SceneComponentsActivity" android:orientation="vertical"
>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rl_components"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layout_editor_absoluteY="0dp" tools:layout_editor_absoluteX="0dp"
                android:background="@color/mainDarkBlue">
        </androidx.recyclerview.widget.RecyclerView>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/ic_abstract_layer_white"
                android:id="@+id/imageView3" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:alpha="0.5"/>
        <LinearLayout
                android:id="@+id/bt_addGroup"
                android:orientation="horizontal"
                android:layout_width="109dp"
                android:layout_height="54dp" android:background="@drawable/rounded_button"
                app:layout_constraintBottom_toTopOf="@+id/bt_add_mesh" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="20dp" android:layout_marginEnd="25dp" android:visibility="invisible"
                android:elevation="10dp">
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/ic_add_new"
                    android:id="@+id/imageView4" android:layout_weight="1" android:layout_gravity="center_vertical"
                    android:paddingLeft="5dp"/>
            <TextView
                    android:text="Group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView3" android:layout_weight="1"
                    android:fontFamily="@font/inter" android:textColor="@color/mainWhite"
                    android:textSize="16sp" android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <LinearLayout
                android:id="@+id/bt_addLamp"
                android:orientation="horizontal"
                android:layout_width="109dp"
                android:layout_height="54dp" android:background="@drawable/rounded_button"
                app:layout_constraintBottom_toTopOf="@+id/bt_addGroup" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="20dp" android:layout_marginEnd="25dp" android:visibility="invisible"
                android:elevation="10dp">
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/ic_add_new"
                    android:id="@+id/imageView5" android:layout_weight="1" android:layout_gravity="center_vertical"
                    android:paddingLeft="5dp"/>
            <TextView
                    android:text="Lamp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView5" android:layout_weight="1"
                    android:fontFamily="@font/inter" android:textColor="@color/mainWhite"
                    android:textSize="16sp" android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:id="@+id/bt_add_mesh"
                android:elevation="10dp" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="45dp"
                android:background="@drawable/rounded_button">
            <ImageView
                    android:id="@+id/bt_add_image"
                    android:layout_height="30dp"
                    android:layout_width="30dp"
                    app:srcCompat="@drawable/avd_anim"
                    android:layout_gravity="center" android:layout_weight="1"/>
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>