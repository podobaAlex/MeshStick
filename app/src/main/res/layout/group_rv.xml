<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:id="@+id/group"
        android:orientation="vertical"
        android:background="#abcdef">
    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:background="#abcdef"
            android:layout_height="wrap_content">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:background="#abcdef"
                android:layout_height="match_parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:background="#abcdef"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/cl_group">

                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/ll_color"
                        app:layout_constraintVertical_bias="0.0" android:layout_marginLeft="16dp"
                        android:layout_marginStart="16dp">
                </LinearLayout>
                <TextView
                        android:text="@string/groupname"
                        android:textSize="18sp"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp" android:id="@+id/tv_groupName"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/ll_color"
                        app:layout_constraintEnd_toStartOf="@+id/bt_settings"
                        app:layout_constraintHorizontal_bias="0.058" app:layout_constraintVertical_bias="0.6"/>
                <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#00ABCDEF"
                        app:srcCompat="@drawable/control_panel" android:id="@+id/bt_settings"
                        android:contentDescription="@string/settings"
                        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="16dp"
                        android:layout_marginRight="16dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#DDE4EC"
                    android:id="@+id/rv_lampsOfGroup"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>