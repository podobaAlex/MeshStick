<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.meshstick_withoutmesh.MainActivity" android:background="@color/mainDarkBlue">
    <ImageView
            android:layout_width="1063dp"
            android:layout_height="1233dp" app:srcCompat="@drawable/ic_abstract_layer_white"
            android:id="@+id/imageBackground"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            android:layout_marginTop="-320dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/rv_lampsConnected"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toBottomOf="@+id/textView"
            android:layout_marginTop="67dp" android:layout_marginBottom="100dp">
    </androidx.recyclerview.widget.RecyclerView>
    <Button
            android:layout_width="379dp"
            android:layout_height="50dp" android:id="@+id/bt_openScenes"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            android:layout_marginBottom="34dp"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" android:elevation="10dp" android:text='Scenes'
            android:textColor="@color/mainWhite" android:textSize="16sp"
            android:background="@drawable/scenes_button" android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp" android:fontFamily="@font/inter"/>
    <TextView
            android:text="welcome to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView2"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:textColor="@color/mainWhite"
            android:layout_marginTop="8dp" android:textSize="18sp" android:fontFamily="@font/inter"/>
    <TextView
            android:text="MeshStick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/mainWhite"
            android:fontFamily="@font/inter_medium" android:textSize="32sp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" android:elevation="30dp"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="87dp"
            android:layout_height="50dp" android:id="@+id/bt_add_mesh"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/rounded_bt_addmesh" android:layout_marginTop="92dp">
        <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp" app:srcCompat="@drawable/avd_anim_connection"
                android:id="@+id/bt_add_mesh_image"
                android:layout_weight="1" android:layout_gravity="center"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>