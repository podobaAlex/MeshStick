<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:id="@+id/lamp_object"
>

    <androidx.cardview.widget.CardView
            android:background="@color/mainBlue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" app:cardCornerRadius="20dp">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:background="@color/mainBlue"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:text="@string/lamp_name"
                    android:id="@+id/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/current_color"
                    app:layout_constraintEnd_toStartOf="@+id/bt_settings" app:layout_constraintHorizontal_bias="0.056"
                    app:layout_constraintVertical_bias="0.526"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/current_color"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
                    app:layout_constraintVertical_bias="0.0">
            </LinearLayout>
            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#00ABCDEF"
                    app:srcCompat="@drawable/control_panel" android:id="@+id/bt_settings"
                    android:contentDescription="@string/settings"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp" android:layout_marginRight="16dp"
                    tools:ignore="TouchTargetSizeCheck"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>