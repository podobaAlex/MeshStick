<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.meshstick_withoutmesh.LampSettings">

    <Button
            android:text="save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/bt_save"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="RGB"
            android:layout_width="80dp"
            android:layout_height="37dp"
            android:id="@+id/tv_RGB"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.06" app:layout_constraintVertical_bias="0.808"/>
    <EditText
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/et_red"
            app:layout_constraintStart_toEndOf="@+id/tv_RGB" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.051" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.811"/>
    <EditText
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/et_green"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.811"
            app:layout_constraintStart_toEndOf="@+id/et_red" app:layout_constraintHorizontal_bias="0.165"/>
    <EditText
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/et_blue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.811"
            app:layout_constraintStart_toEndOf="@+id/et_green" app:layout_constraintHorizontal_bias="0.555"/>
    <EditText
            android:layout_width="206dp"
            android:layout_height="44dp"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/et_lampName"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_lampName" app:layout_constraintBottom_toTopOf="@+id/et_green"
            app:layout_constraintHorizontal_bias="0.534" app:layout_constraintVertical_bias="0.044"/>
    <TextView
            android:text="Lamp name"
            android:layout_width="134dp"
            android:layout_height="31dp"
            android:id="@+id/tv_lampName"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="32dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="20dp" android:layout_marginStart="20dp"
            app:layout_constraintBottom_toTopOf="@+id/tv_RGB" app:layout_constraintVertical_bias="0.0"/>
</androidx.constraintlayout.widget.ConstraintLayout>